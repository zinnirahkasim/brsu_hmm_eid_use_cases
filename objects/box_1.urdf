<robot name="simple_box">
  <link name="my_box">
    <inertial>
      <origin xyz="0 0 0" /> 
      <mass value="1.0" />
      <inertia  ixx="0.001" ixy="0.0"  ixz="0.0"  iyy="0.001"  iyz="0.0"  izz="0.001" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.03"/>
      <geometry>
        <box size="0.3 0.3 0.11"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.03"/>
      <geometry>
        <box size="0.3 0.3 0.11"/>
      </geometry>
    </collision>
  </link>
  <gazebo reference="my_box">
  </gazebo>
</robot>

